      "platforms": [
        "local"
      ],
      "connectivity": [
        "lan"
      ],
      "images": {
        "small": "/drivers/ducobox-mdns/assets/images/small.png",
        "large": "/drivers/ducobox-mdns/assets/images/large.png",
        "xlarge": "/drivers/ducobox-mdns/assets/images/xlarge.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "id": "ducobox-mdns"
    }
  ],
  "discovery": {
    "Aquarium-mDNS": {
      "type": "mdns-sd",
      "mdns-sd": {
        "name": "Aquarium-mDNS",
        "protocol": "udp"
      },
      "id": "{{{ESP_EASY_Aquarium_}}}"
    },
    "DucoBox-mDNS": {
      "type": "mdns-sd",
      "mdns-sd": {
        "name": "DucoBox-mDNS",
        "protocol": "udp"
      },
      "id": "{{ESP_EASY_DucoBox_}}"
