      "connectivity": [
        "lan"
      ],
      "images": {
        "small": "/drivers/aquarium-mdns/assets/images/small.png",
        "large": "/drivers/aquarium-mdns/assets/images/large.png",
        "xlarge": "/drivers/aquarium-mdns/assets/images/xlarge.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "id": "aquarium-mdns"
    },
    {
      "name": {
        "en": "DucoBox mDNS"
      },
